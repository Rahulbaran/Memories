{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "spaced-comment": "error",
    "no-unused-vars": "error",
    "callback-return": "off",
    "semi": "error",
    "arrow-parens": "off",
    "arrow-spacing": "warn",
    "no-underscore-dangle": "warn",
    "camelcase": "warn",
    "comma-dangle": "error",
    "prefer-object-spread": "warn",
    "func-names": "off",
    "prefer-spread": "warn",
    "object-shorthand": "warn",
    "no-return-await": "off",
    "no-process-exit": "off"
  }
}
